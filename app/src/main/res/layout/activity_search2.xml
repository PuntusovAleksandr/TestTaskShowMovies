<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aleksandrp.testapplicationalinataranovskaya.activity.SearchActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@android:color/darker_gray"/>

    <include layout="@layout/content_search"/>


    <RelativeLayout
        android:id="@+id/progressBar_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/prog_bar_grey"
            android:indeterminateDuration="1500"/>

    </RelativeLayout>

</RelativeLayout>
